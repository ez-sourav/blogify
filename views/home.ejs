<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Home Page</title>

    <style>
      .blog-image {
        height: 160px;
        object-fit: cover;
      }

      .truncate-title {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>
  </head>

  
  <body class="bg-light d-flex flex-column min-vh-100">

    <%- include('./partials/nav.ejs') %>

    <!-- MAIN CONTENT -->
    <div class="container mt-4">

      <h3 class="fw-bold mb-4">Latest Blogs</h3>

      <% if (blogs.length === 0) { %>
        <div class="alert alert-info text-center">
          No blogs available. Be the first to create one ðŸš€
        </div>
      <% } else { %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
          <% blogs.forEach(blog => { %>
            <div class="col">
              <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">

                <!-- Blog Image -->
                <img 
                  src="<%= blog.coverImageURL %>" 
                  class="blog-image" 
                  alt="Blog Image"
                />

                <!-- Card Content -->
                <div class="card-body d-flex flex-column p-3">
                  <h6 class="card-title fw-bold truncate-title mb-2">
                    <%= blog.title %>
                  </h6>

                  <a 
                    href="/blog/<%= blog._id %>" 
                    class="btn btn-primary btn-sm mt-auto w-100"
                  >
                    Read More
                  </a>
                </div>

              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

    </div>

  
    
    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/script.ejs') %>
    
  </body>
</html>
