<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Home Page</title>

    <style>
      .blog-image {
        height: 160px;
        object-fit: cover;
      }
      .truncate-title {
        display: -webkit-box;
        /* -webkit-line-clamp: 2; */
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>
  </head>

  <body class="bg-light">
    
    <%- include('./partials/nav.ejs') %>

    <!-- MAIN CONTENT -->
    <div class="container mt-4">
      <h3 class="fw-bold mb-4">Latest Blogs</h3>

      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        <% blogs.forEach(blog => { %>
          <div class="col">
            <div class="card blog-card border-0 shadow-sm rounded-3 h-100 overflow-hidden">

              <!-- Blog Image -->
              <img src="<%= blog.coverImageURL %>" class="blog-image" />

              <!-- Card Content -->
              <div class="card-body d-flex flex-column p-3">
                <h6 class="card-title fw-bold truncate-title mb-2">
                  <%= blog.title %>
                </h6>

                <a 
                  href="/blog/<%= blog._id %>" 
                  class="btn btn-primary btn-sm mt-auto w-100"
                >
                  Read More
                </a>
              </div>

            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-light mt-5">
      <div class="container py-4 text-center">

        <h5 class="fw-bold">Blogify</h5>
        <p class="mb-1">A simple blog platform built using Node.js & MongoDB.</p>

        <div class="my-3">
          <a href="/" class="text-light text-decoration-none mx-2">Home</a>
          <a href="/blog/add-new" class="text-light text-decoration-none mx-2">Create Blog</a>
          <a href="/user/signup" class="text-light text-decoration-none mx-2">Sign Up</a>
          <a href="/user/signin" class="text-light text-decoration-none mx-2">Sign In</a>
        </div>

        <p class="text-secondary small mb-0">
          © <%= new Date().getFullYear() %> Blogify — All Rights Reserved.
        </p>

      </div>
    </footer>

    <%- include('./partials/script.ejs') %>
  </body>
</html>
