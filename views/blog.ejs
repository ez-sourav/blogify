<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title><%= blog.title %> | Blogify</title>

    <style>
      .blog-wrapper {
        max-width: 760px;
        margin: auto;
      }

      .blog-image {
        max-height: 380px;
        object-fit: cover;
        border-radius: 12px;
      }

      .blog-meta {
        font-size: 0.95rem;
        letter-spacing: 0.4px;
      }

      .blog-body {
        font-size: 1.05rem;
        line-height: 1.8;
        white-space: pre-wrap;
      }

      .comment-user-img {
        width: 45px;
        height: 45px;
        object-fit: cover;
      }
    </style>
  </head>

  <body class="bg-light d-flex flex-column min-vh-100">
    <%- include('./partials/nav.ejs') %>

    <!-- ===== BLOG CONTENT ===== -->
    <main class="flex-grow-1">
      <div class="container py-4">
        <div class="card shadow-sm border-0 rounded-3 p-4 blog-wrapper">
          <!-- Title + Actions -->
          <div
            class="d-flex flex-column flex-md-row justify-content-between gap-3 mb-3"
          >
            <div>
              <h1 class="fw-bold mb-2"><%= blog.title %></h1>
              <p class="text-muted blog-meta mb-0">
                <%= blog.createdAt.toLocaleDateString("en-US", { year:
                "numeric", month: "long", day: "numeric" }) %>
              </p>
            </div>

            <% if (user && user._id.toString() ===
            blog.createdBy._id.toString()) { %>
            <div class="d-flex gap-2 align-self-start">
              <a
                href="/blog/edit/<%= blog._id %>"
                class="btn btn-sm btn-outline-warning"
              >
                ‚úèÔ∏è Edit
              </a>

              <form
                action="/blog/delete/<%= blog._id %>"
                method="POST"
                id="deleteBlogForm"
              >
                <button
                  type="button"
                  class="btn btn-sm btn-outline-danger"
                  data-bs-toggle="modal"
                  data-bs-target="#deleteConfirmModal"
                >
                  üóëÔ∏è Delete
                </button>
              </form>
            </div>
            <% } %>
          </div>

          <!-- Cover Image -->
          <img
            src="<%= blog.coverImageURL %>"
            class="img-fluid blog-image mb-4"
            alt="Blog cover"
          />

          <!-- Blog Body -->
          <div class="blog-body text-dark"><%= blog.body %></div>
        </div>
      </div>

      <!-- ===== AUTHOR BOX ===== -->
      <div class="container pb-4">
        <div
          class="card border-0 shadow-sm rounded-3 p-3 blog-wrapper d-flex align-items-center flex-row gap-3"
        >
          <img
            src="<%= blog.createdBy.profileImageURL %>"
            width="60"
            height="60"
            class="rounded-circle border"
          />
          <div>
            <h6 class="fw-semibold mb-0"><%= blog.createdBy.fullName %></h6>
            <small class="text-muted">Author</small>
          </div>
        </div>
      </div>

      <!-- ===== COMMENTS ===== -->
      <div class="container pb-5">
        <div class="card shadow-sm border-0 rounded-3 p-4 blog-wrapper">
          <h4 class="fw-bold mb-4">Comments (<%= comments.length %>)</h4>

          <% if (locals.user) { %>
          <form
            action="/blog/comment/<%= blog._id %>"
            method="post"
            class="mb-4"
          >
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                name="content"
                placeholder="Write a comment..."
                required
              />
              <button class="btn btn-primary">Post</button>
            </div>
          </form>
          <% } %>

          <div class="list-group">
            <% comments.forEach(comment => { %>
            <div class="list-group-item border-0 border-bottom py-3">
              <div class="d-flex gap-3">
                <img
                  src="<%= comment.createdBy.profileImageURL %>"
                  class="rounded-circle border comment-user-img"
                />

                <div>
                  <h6 class="fw-semibold mb-1">
                    <%= comment.createdBy.fullName %>
                    <small class="text-muted ms-2">
                      ‚Ä¢ <%= timeAgo(comment.createdAt) %>
                    </small>
                  </h6>
                  <p class="mb-0"><%= comment.content %></p>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </main>

    <%- include('./partials/footer.ejs') %> <%- include('./partials/script.ejs')
    %>
    <!-- Delete Confirmation Modal -->
    <div
      class="modal fade"
      id="deleteConfirmModal"
      tabindex="-1"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
          <div class="modal-header">
            <h5 class="modal-title text-danger">Delete Blog</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <div class="modal-body">
            <p class="mb-0">
              Are you sure you want to delete this blog?<br />
              <strong>This action cannot be undone.</strong>
            </p>
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>

            <button
              type="button"
              class="btn btn-danger"
              onclick="document.getElementById('deleteBlogForm').submit();"
            >
              Yes, Delete
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
